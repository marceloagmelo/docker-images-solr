{
    "kind": "PersistentVolume",
    "apiVersion": "v1",
    "metadata": {
        "name": "solr",
        "labels": {
            "type": "local"
        }
    },
    "spec": {
        "capacity": {
            "storage": "10Gi"
        },
        "hostPath": {
            "path": "/opt/solr"
        },
        "accessModes": [
            "ReadWriteOnce"
        ]
    }
}
